# ============================================================================
# Vreamio API - Environment Variables
# Copy this to .env and fill in your values
# ============================================================================

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=vreamio-dev-secret-change-in-production-32chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database
DATABASE_PATH=./data/vreamio.db

# CORS
CORS_ORIGINS=http://localhost:1420,http://localhost:3000,tauri://localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache
METADATA_CACHE_TTL=86400

# ============================================================================
# BILLING & TORBOX VENDOR (New)
# ============================================================================

# Stripe (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder
STRIPE_PRICE_ID=price_placeholder
STRIPE_SUCCESS_URL=http://localhost:1420/settings?payment=success
STRIPE_CANCEL_URL=http://localhost:1420/settings?payment=canceled

# TorBox Vendor API (get from TorBox Partners dashboard)
TORBOX_VENDOR_API_KEY=
TORBOX_ENCRYPTION_KEY=vreamio-dev-encryption-key-change-in-prod

# Internal/Operator API Key (for /internal/* routes)
# Leave empty in dev to allow unauthenticated access
INTERNAL_API_KEY=
